{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["DOM", "ESNext"],
		"types": ["vite/client", "node"]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
